<link rel="stylesheet" href="/css/customerInfo.css">
<center>
    <h1>Customer List</h1>
    <div>
        <a href="/users/addPage">
            <button type="button" class="btn btn-primary">Add Customer</button>
        </a>
    </div>
    <hr>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Address</th>
                <th scope="col">City</th>
                <th scope="col">State</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <% customerList.forEach((customer,index)=>{ %>
                <tr>
                    <th scope="row">
                        <%= index+1 %>
                    </th>
                    <td>
                        <%=customer.first_name %>
                    </td>
                    <td>
                        <%=customer.last_name %>
                    </td>
                    <td>
                        <%=customer.address %>
                    </td>
                    <td>
                        <%=customer.city %>
                    </td>
                    <td>
                        <%=customer.state %>
                    </td>
                    <td>
                        <%=customer.email %>
                    </td>
                    <td>
                        <%=customer.phone %>
                    </td>
                    <td id="action">

                        <span>
                            <form action="/users/deleteCustomer/<%=customer.uuid %>" method="post">
                                <button type="submit">
                                    <i class="fa-solid fa-trash-can"></i>
                                </button>
                            </form>
                        </span>
                        <span>
                            <a href="/users/updatePage/<%=customer.uuid %>">
                                <button type="submit">
                                    <i class="fa-solid fa-pen"></i>
                                </button>
                            </a>
                        </span>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</center>